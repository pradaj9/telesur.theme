<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <rules css:if-content="body[class*='template-folder_'],
                           body.portaltype-folder,
                           body.portaltype-topic,
                           body.template-manage-content-rules.portaltype-plone-site">
        <theme href="seccion.html" />
        <rules css:if-content="div.notas-seccion">
            <before css:theme-children="#telesur-seccion-main"
                css:content="#edit-bar" />
            <replace css:theme-children=".telesur-left-content > div.breadcumb-categoria"
                css:content-children="#video-scroll-home > div.breadcumb" />
            <replace css:theme="#nota-titular > object"
                css:content="#video-scroll-home div.video-widget" />
            <replace
                css:theme-children="#nota-titular h1"
                css:content-children="#video-scroll-home h3.tileHeadline" />
            <replace
                css:theme-children="#nota-titular > p"
                css:content-children="#video-scroll-home p.nota-descripcion" />
            <replace
                css:theme-children="#nota-titular > div.sigue-leyendo"
                css:content-children="#video-scroll-home p.tileFooter" />
            <replace css:theme-children="#telesur-seccion-listing">
                <xsl:for-each css:select="div.notas-seccion">
                    <div class="notas-sencilla-grande visualIEFloatFix">
                        <xsl:copy-of select="h3" />
                        <div class="nota-sencilla-grande-thumb">
                            <xsl:copy-of select="div[@class='nota-seccion-thumb']/node()" />
                        </div>
                        <xsl:copy-of select="p[@class='nota-descripcion']" />
                        <div class="sigue-leyendo">
                            <xsl:copy-of select="p[@class='tileFooter']/node()" />
                        </div>
                    </div>
                </xsl:for-each>
            </replace>
        </rules>
        <rules css:if-content="div:not(.notas-seccion)">
            <replace
                css:theme-children="#telesur-seccion-main"
                css:content="#portal-column-content div.documentEditable" />
        </rules>
        <after css:theme-children="#ultimos-sidebar"
            css:content="#lo-mas" />
        <!--
        <replace css:theme-children="#telesur-seccion-listing"
            css:content="div.notas-seccion" />
        <copy attributes="href class"
            css:theme="#nota-titular div.sigue-leyendo > a"
            css:content="#video-scroll-home p.tileFooter > a" />
            -->

    </rules>

</rules>
