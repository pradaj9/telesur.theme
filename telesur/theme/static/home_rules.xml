<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <rules if-path="/">
        <theme href="home-scroll.html" />
        
        <!-- drop all the articule boxes -->
        <!-- <drop css:theme="div.notas-sencilla-grande" /> -->
        
        <!-- edit bar first element inside telesur-middle -->
        <before css:theme-children="#telesur-middle"
            css:content="#edit-bar" />

        <!-- main new category -->
        <!-- <replace css:theme-children="#telesur-left-content-big div.breadcumb-categoria"
            css:content-children="#video-scroll-home > div.breadcumb" /> -->
        <replace css:theme-children=".main-article .category-data .category"
                 css:content-children="#video-scroll-home > div.breadcumb" />

        <!-- main new video or image -->
        <!--<replace css:theme="#video-scroll-home > object"
            css:content="#video-scroll-home div.video-widget" />-->
        <replace css:theme-children=".main-article .media-container"
                 css:content="#video-scroll-home .video-widget" />

        <!-- main new title -->
        <!-- <replace
            css:theme-children="#video-scroll-home h1"
            css:content-children="#video-scroll-home h3.tileHeadline" /> -->
        <replace css:theme-children=".data-article-container .title"
                 css:content-children="#video-scroll-home h3.tileHeadline" />            
        <!-- main new descrption -->
        <!--<replace
            css:theme-children="#video-scroll-home > p"
            css:content-children="#video-scroll-home p.nota-descripcion" />-->
        <replace css:theme-children=".data-article-container .description"
                 css:content-children="#video-scroll-home .nota-descripcion" />            

        <!-- main new relateditems-->
        <replace css:theme-children=".data-article-container .category-data .related-articles"
                 css:content-children="#video-scroll-home #form-widgets-IRelatedItems-relatedItems" />

        <!-- news listing -->
        <replace css:theme-children=".articles-carousel-wrapper">
          <xsl:for-each css:select=".notas-seccion">
            <xsl:if test="position() &lt; 5">
                <div class="article-item">
                    <div class="article-item-wrapper">
                      <div class="thumb">
                          <xsl:copy-of select="div[@class='nota-seccion-thumb']/node()" />
                      </div>                
                      <xsl:copy-of select="h3" />
                    </div>
                </div>
            </xsl:if>          
          </xsl:for-each>
        </replace>   
        <replace css:theme-children=".article-listing">
          <xsl:for-each css:select=".notas-seccion">
              <xsl:if test="position() &gt; 5">
                <div class="notas-sencilla-grande visualIEFloatFix">
                    <xsl:copy-of select="h3" />
                    <div class="nota-sencilla-grande-thumb">
                        <xsl:copy-of select="div[@class='nota-seccion-thumb']/node()" />
                    </div>
                    <xsl:copy-of select="p[@class='nota-descripcion']" />
                    <!--<div class="sigue-leyendo">
                        <xsl:copy-of select="p[@class='tileFooter']/node()" />
                    </div>-->
                </div>
              </xsl:if>
          </xsl:for-each>
        </replace>
        
        <after css:theme-children="#telesur-right-sidebar-small"
            css:content="#lo-mas" />

        <replace css:if-content="#telesur-titulares" 
                 css:content="#telesur-titulares"
                 css:theme="#mas-titulares-widget"/>
    </rules>

</rules>
