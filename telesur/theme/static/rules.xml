<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    
    <rules css:if-content="#visual-portal-wrapper">
        <rules if-path="/">
            <theme href="home-scroll.html" />
            <drop css:theme="div.notas-sencilla-grande" />
            <replace css:theme-children="#telesur-left-content-big div.breadcumb-categoria"
                css:content-children="#video-scroll-home > div.breadcumb" />
            <replace
                css:theme-children="#video-scroll-home h1"
                css:content-children="#video-scroll-home h3.tileHeadline" />
            <replace
                css:theme-children="#video-scroll-home > p"
                css:content-children="#video-scroll-home p.nota-descripcion" />
            <after css:theme="#video-scroll-home">
                <xsl:for-each css:select="div.notas-seccion">
                    <div class="notas-sencilla-grande visualIEFloatFix">
                        <xsl:copy-of select="h3" />
                        <div class="nota-sencilla-grande-thumb">
                            <xsl:copy-of select="div[@class='nota-seccion-thumb']/node()" />
                        </div>
                        <xsl:copy-of select="p[@class='nota-descripcion']" />
                        <div class="sigue-leyendo">
                            <xsl:copy-of select="p[@class='tileFooter']/node()" />
                        </div>
                    </div>
                </xsl:for-each>
            </after>
        </rules>

        <rules css:if-content="body.template-folder_summary_view,
                               body.portaltype-folder,
                               body.portaltype-topic">
            <theme href="seccion.html" />
            <replace css:theme-children=".telesur-left-content > div.breadcumb-categoria"
                css:content-children="#video-scroll-home > div.breadcumb" />
            <replace
                css:theme-children="#nota-titular h1"
                css:content-children="#video-scroll-home h3.tileHeadline" />
            <replace
                css:theme-children="#nota-titular > p"
                css:content-children="#video-scroll-home p.nota-descripcion" />
            <replace css:theme-children="#telesur-seccion-listing">
                <xsl:for-each css:select="div.notas-seccion">
                    <div class="notas-sencilla-grande visualIEFloatFix">
                        <xsl:copy-of select="h3" />
                        <div class="nota-sencilla-grande-thumb">
                            <xsl:copy-of select="div[@class='nota-seccion-thumb']/node()" />
                        </div>
                        <xsl:copy-of select="p[@class='nota-descripcion']" />
                        <div class="sigue-leyendo">
                            <xsl:copy-of select="p[@class='tileFooter']/node()" />
                        </div>
                    </div>
                </xsl:for-each>
            </replace>
            <!--
            <replace css:theme-children="#telesur-seccion-listing"
                css:content="div.notas-seccion" />
            <copy attributes="href class"
                css:theme="#nota-titular div.sigue-leyendo > a"
                css:content="#video-scroll-home p.tileFooter > a" />
                -->

        </rules>

        <rules css:if-content="body.portaltype-collective-nitf-content">
            <theme href="nota.html" />
            <drop css:content="dl.portlet-collection-ultimas-noticias dd.portletItem > a > img" />
            <after theme="//*[@id='telesur-right-sidebar']/div[1]">
                <div id="ultimas-noticias">
                    <div class="breadcumb-categoria">Ãšltimas Noticias</div>
                    <div>
                        <xsl:for-each css:select="dl.portlet-collection-ultimas-noticias dd.portletItem">
                            <xsl:copy-of select="node()" />
                        </xsl:for-each>
                    </div>
                </div>
            </after>
        </rules>
            <drop css:content="#ultimas-noticias a > img" />
            <replace css:theme="div.telesur-right-sidebar #mapa-interactivo"
                css:content="dl.portlet-collection-ultimas-noticias" />

        <theme href="nota.html" />
        <notheme if="$ajax_load" />

        <rules
            css:if-content="body.template-atct_edit,
                            body.template-login_form,
                            body.template-logged_out,
                            body.template-search,
                            body.template-search_form,
                            body.template-overview-controlpanel">
            <replace css:theme="#telesur-middle"
                css:content="#content" />
        </rules>
        <replace theme="/html/head/base"
            content="/html/head/base" />
        <drop theme="/html/head/meta" />
        <after content="/html/head/meta"
            theme-children="/html/head" />
        <before content="/html/head/style | /html/head/script | /html/head/link"
            theme-children="/html/head"
            />
        <replace theme="/html/head/title"
            content="html/head/title" />
        <copy attributes="*"
            css:theme="body"
            css:content="body" />
        <copy attributes="href accesskey title"
            css:theme="#logo-telesur > a"
            css:content="#portal-logo" />
        <after css:theme="#logo-telesur"
            css:content="#portal-personaltools-wrapper" />
        <after css:theme-children="#telesur-header"
            css:content="#portal-searchbox" />
        <replace css:theme-children="#menu"
            css:content-children="#portal-globalnav" />

        <drop css:content="#ticker-wrapper" />
        <replace
            css:theme="#avances"
            css:content="#ticker-wrapper"
            method="raw"
            />

        <drop css:theme="#telesur-left-content p" />
        <before css:theme="#telesur-left-content > h1"
            css:content="#edit-bar" />
        <replace css:theme="#telesur-left-content > h1"
            css:content="#portal-column-content h1.documentFirstHeading" />
        <rules css:if-content="#content #media-counter">
            <replace 
                css:theme-children="#telesur-left-content #nota-detail"
                css:content="#content #media-counter" />
            <after css:theme-children="#telesur-left-content #nota-detail"
                css:content="#content div.newsview" />
        </rules>
        <after css:theme="#telesur-left-content #nota-detail"
            css:content="#parent-fieldname-text" />
        <replace css:theme-children="#telesur-left-content #byline" 
            css:content-children="#content p.nitfByline" />
        <replace css:theme="#telesur-left-content div#notas-relacionadas ul"
            css:content="#related-items span" />
        <drop css:theme="#telesur-left-content div.comentario-individual" />
        <after css:theme="#telesur-left-content #comentarios-nota > h2"
            css:content="#viewlet-below-content div.discusion" />

        <replace css:theme="#ultimos-videos">
            <xsl:copy-of css:select="dl.portlet-static-ultimos-videos > dd > p" />
        </replace>
        <replace css:theme="#ultimos-programas">
            <xsl:copy-of css:select="dl.portlet-static-ultimos-programas > dd > p" />
        </replace>
            <!--
            <div id="ultimas-noticias">
                <xsl:for-each css:select="dl.portlet-collection-ultimas-noticias > dd.portletItem">
                    <xsl:copy-of select="a/node()" />
                </xsl:for-each>
            </div>
        </replace>
        -->
    </rules>
</rules>
